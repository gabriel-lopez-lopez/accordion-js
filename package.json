{
	"name": "accordion-js",
	"version": "0.0.0",
	"description": "Accordion with native javascript",
	"author": "Gabriel López López <gabriel.lopez.lopez@hotmail.com>",
	"homepage": "https://gabriel-lopez-lopez.github.io/accordion-js/",
	"repository": {
		"type": "git",
		"url": "https://github.com/gabriel-lopez-lopez/accordion-js/"
	},
	"main": "index.js",
	"scripts": {
		"start": "webpack-dev-server --mode development --config config/webpack.development.js",
		"build": "npm run coverage && webpack --progress --mode production --profile --colors --config config/webpack.production.js",
		"deploy": "npm run build && npm run deploy:gh-pages",
		"deploy:gh-pages": "npm run deploy:cleanup && npm run deploy:start",
		"deploy:cleanup": "gh-pages-clean -d node_modules/gh-pages/.cache",
		"deploy:start": "gh-pages -d build",
		"coverage": "jest --colors --coverage",
		"test": "jest --colors",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"gh-pages": "^1.2.0"
	},
	"devDependencies": {
		"address": "^1.0.3",
		"autoprefixer": "^8.1.0",
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.2.3",
		"babel-jest": "^23.0.1",
		"babel-loader": "^7.1.3",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"chalk": "^2.3.2",
		"clean-webpack-plugin": "^0.1.19",
		"css-loader": "^0.28.9",
		"error-overlay-webpack-plugin": "^0.1.5",
		"eslint": "^4.18.2",
		"eslint-loader": "^2.0.0",
		"extract-text-webpack-plugin": "^4.0.0-beta.0",
		"file-loader": "^1.1.11",
		"hoek": "^5.0.3",
		"html-webpack-plugin": "^3.0.6",
		"http-proxy-middleware": "^0.17.4",
		"ignore-styles": "^5.0.1",
		"jest": "^23.1.0",
		"node-sass": "^4.9.0",
		"postcss-flexbugs-fixes": "^3.3.0",
		"postcss-loader": "^2.1.1",
		"sass-loader": "^6.0.6",
		"style-loader": "^0.20.3",
		"uglifyjs-webpack-plugin": "^1.2.2",
		"url-loader": "^1.0.1",
		"webpack": "^4.10.2",
		"webpack-cli": "^3.0.2",
		"webpack-dev-server": "^3.1.4",
		"webpack-merge": "^4.1.2"
	},
	"babel": {
		"presets": [
			"env"
		]
	},
	"proxy": {
		"/api": {
			"target": "https://gist.githubusercontent.com",
			"secure": false,
			"ws": false,
			"ssl": false,
			"changeOrigin": true,
			"pathRewrite": {
				"^/api": "/gabriel-lopez-lopez/bc87e54680242b68d0f96c8c419bcf2a/raw/26b68eda52d60e4db18f506a980d430990796751/accordion-list-items.json"
			}
		}
	},
	"jest": {
		"moduleNameMapper": {
			"\\.(css|scss|less)$": "<rootDir>/config/jest/__mocks__/styleMock.js",
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/__mocks__/fileMock.js"
		}
	}
}